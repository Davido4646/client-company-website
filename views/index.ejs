  <style>

/* Set global styles */
body {
  margin: 0;
  font-family: Arial, sans-serif;
}

/* Style the header */
header {
  background-color: #8A2BE2;
  color: #fff;
  padding: 20px;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}

header .logo {
  font-size: 1.5rem;
  font-weight: bold;
}

header .menu ul {
  margin: 0;
  padding: 0;
  display: flex;
  position: fixed;
  right: 2%;
  top: 30px;
}

header .menu li {
  list-style: none;
  margin-right: 20px;
}

header .menu a {
  color: #fff;
  text-decoration: none;
  transition: color 0.3s ease;
}

header .menu a:hover {
  color: #ffc107;
}

/* Style the hero section */
.hero {
  background-image: url(https://images.unsplash.com/photo-1451187580459-43490279c0fa?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjF8fGJhY2tncm91bmQlMjBpbWFnZSUyMGZvciUyMGNvbXBhbnklMjB3ZWJzaXRlfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60);
  background-size: cover;
  background-position: center;
  height: 600px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hero h1 {
  font-size: 4rem;
  color: #ffffff;
  text-align: center;
}

.hero p {
  font-size: 1.5rem;
  color: #ffffff;
  text-align: center;
}

.hero .button {
  display: block;
  margin: 0 auto;
  margin-top: 30px;
  padding: 10px 20px;
  background-color: #8A2BE2;
  color: #fff;
  text-align: center;
  text-decoration: none;
  border-radius: 5px;
  transition: background-color 0.3s ease;
}

.hero .button:hover {
  background-color: goldenrod;
}

/* Style the about section */
.about {
  padding: 50px;
  background-color: #eee;
}

.about img {
position: relative;
left: 30%;
}

.about h2 {
  font-size: 2rem;
  text-align: center;
  margin-bottom: 30px;
}

.about p {
  font-size: 1.2rem;
  line-height: 1.5;
}

/* Style the services section */
.services {
  padding: 50px;
  background-color: #f8f8f8;
}

.services h2 {
  font-size: 2rem;
  text-align: center;
  margin-bottom: 30px;
}

.section-center {
  width: 90vw;
  margin: 0;
  max-width: 1170px;
  margin-bottom: -200px;
}
@media screen and (min-width: 992px) {
  .section-center {
    width: 95vw;
  }
}




.projects-text {
  width: 85vw;
  max-width: 30rem;
  margin: 0 auto;
}
.project {
  position: relative;
  background: rgb(230, 179, 52);
  margin-bottom: 2rem;
  border-radius: 5%;
}
.project-info {
  text-align: center;
  color: white;
  position: absolute;
  top: 50%;
  left: 48%;
  transform: translate(-50%, -50%);
  transition: var(--transition);
  opacity: 0;
}
.project-info p {
  text-transform: capitalize;
  color: var(--clr-white);
}
.project:hover .project-info {
  opacity: 1;
}
.project-img {
  height: 15rem;
  border-radius: 5%;
}
.project:hover .project-img {
  opacity: 0.1;
}
.project::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 97%;
  height: 100%;
  border: 0.25rem solid #fff;
  opacity: 0;
}
.project:hover::after {
  opacity: 1;
  transform: scale(0.8);
  border-radius: 5%;
}
@media screen and (min-width: 676px) {
  .projects-center {
    display: grid;
  }
}
@media screen and (min-width: 992px) {
  .projects-center {
    grid-template-columns: repeat(4);
  }
}
@media screen and (min-width: 1170px) {
  .projects-center {
    grid-template-rows: 200px 200px;
    gap: 1rem;
    grid-template-areas:
      "a b c d";
  }
  .project-img {
    height: 100%;
  }
  .project {
    height: 100%;
  }
  .project-1 {
    grid-area: a;
  }
  .project-2 {
    grid-area: b;
  }
  .project-3 {
    grid-area: c;
  }
  .project-4 {
    grid-area: d;
  }
}



/* Style the contact section */
.contact {
  padding: 50px;
  background-color: #eee;
}

.contact label {
  display: block;
  margin-bottom: 10px;
}

.contact input[type="text"],
.contact input[type="email"],
.contact input[type="tel"],
.contact textarea {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 20px;
}

.contact button[type="submit"] {
  background-color: #3498db;
  color: #fff;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
}

.contact button[type="submit"]:hover {
  background-color: #2980b9;
}
/* Style the footer */
footer {
background-color: #333;
color: #fff;
padding: 20px;
text-align: center;
}

footer p {
margin: 0;
font-size: 1.2rem;
}

  </style>
